<section>
  <div class="container mt-5 pt-5">
    <div class="row mt-3">
      <div class="text-center mb-2">
        <h3 class="fw-bold text-primary">Edit Products</h3>
      </div>
      <div class="col-lg-4 col-md-6 col-sm-8 col-10 mx-auto">
        <form
          action="/admin/edit-product/<%=product._id%>"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="mb-2">
            <label for="" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              name="Name"
              value="<%=product.Name%>"
            />
          </div>
          <div class="mb-2">
            <label for="" class="form-label">Category</label>
            <input
              type="text"
              class="form-control"
              name="Category"
              value="<%=product.Category%>"
            />
          </div>
          <div class="mb-2">
            <label for="" class="form-label">Price</label>
            <input
              type="number"
              class="form-control"
              name="Price"
              value="<%=product.Price%>"
            />
          </div>
          <div class="mb-2">
            <label for="" class="form-label">Description</label>
            <input
              type="text"
              class="form-control"
              name="Description"
              value="<%=product.Description%>"
            />
          </div>
          <div class="mb-4">
            <label for="" class="form-label">Image</label>
            <img
              src="/product-images/<%=product._id%>.jpg"
              alt=""
              class="my-2"
              id="imgView"
              style="width: 50px; height: 50px"
            />
            <input
              type="file"
              class="form-control"
              name="Image"
              onchange="changeImage(event)"
            />
          </div>
          <button type="submit" class="btn btn-primary fw-bolder w-100">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  //to change the thumbnail image of chnged image 
  function changeImage(event) {
    document.getElementById("imgView").src = URL.createObjectURL(
      event.target.files[0]
    );
  }
</script>
