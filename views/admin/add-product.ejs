<section>
  <div class="container">
    <div class="row mt-5">
      <h3 class="col-md-2 fw-bold text-primary mx-auto">Add Products</h3>
    </div>
    <div class="row my-3">
      <div class="col-md-4 mx-auto">
        <form action="/admin/add-product" method="post" enctype="multipart/form-data">
          <div class="mb-2">
            <label for="" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              name="Name"
            />
          </div>
          <div class="mb-2">
            <label for="" class="form-label"
              >Category</label
            >
            <input
              type="text"
              class="form-control"
              name="Category"
            />
          </div>
          <div class="mb-2">
            <label for="" class="form-label">Price</label>
            <input
              type="number"
              class="form-control"
              name="Price"
            />
          </div>
          <div class="mb-2">
            <label for="" class="form-label"
              >Description</label
            >
            <input
              type="text"
              class="form-control"
              name="Description"
            />
          </div>
          <div class="mb-4">
            <label for="" class="form-label">Image</label>
            <input
              type="file"
              class="form-control"
              name="Image"
            />
          </div>
          <button type="submit" class="btn btn-primary fw-bolder">Add</button>
        </form>
      </div>
    </div>
  </div>
</section>
