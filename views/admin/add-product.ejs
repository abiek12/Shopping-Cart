<section>
  <div class="container mt-5 pt-5">
    <div class="row mt-4">
      <div class="text-center mb-2">
        <h3 class="fw-bold text-primary">Add Products</h3>
      </div>
      <div class="col-lg-4 col-md-6 col-sm-8 col-10 mx-auto">
        <form action="/admin/add-product" method="post" enctype="multipart/form-data">
          <div class="mb-2">
            <label for="" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              name="Name"
            />
          </div>
          <div class="mb-2">
            <label for="" class="form-label"
              >Category</label
            >
            <input
              type="text"
              class="form-control"
              name="Category"
            />
          </div>
          <div class="mb-2">
            <label for="" class="form-label">Price</label>
            <input
              type="number"
              class="form-control"
              name="Price"
            />
          </div>
          <div class="mb-2">
            <label for="" class="form-label"
              >Description</label
            >
            <input
              type="text"
              class="form-control"
              name="Description"
            />
          </div>
          <div class="mb-4">
            <label for="" class="form-label">Image</label>
            <input
              type="file"
              class="form-control"
              name="Image"
            />
          </div>
          <button type="submit" class="btn btn-primary fw-bolder w-100">Add</button>
        </form>
      </div>
    </div>
  </div>
</section>
