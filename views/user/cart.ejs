<!-- cart page -->
<section>
  <div class="container mt-5 pt-5">
    <div class="row">
      <div class="col-8 bg-light rounded-3">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col" class="py-3">Details</th>
              <th scope="col" class="p-3">Quantity</th>
              <th scope="col" class="py-3">Remove</th>
              <th scope="col" class="py-3">Price</th>
            </tr>
          </thead>
          <tbody>
            <%products.forEach((product)=>{%>
            <tr>
              <%product.productDetails.forEach((prod)=>{%>
                <td class="py-3">
                  <img
                    style="width: 50px; height: 50px; border-radius: 5px;"
                    src="/product-images/<%=prod._id%>.jpg"
                    alt=""
                    srcset=""
                  />
                  <%=prod.Name%>
                </td>
              <td class="py-4">
              <button type="button" class="btn btn-primary custom-btn mx-2">+</button>
              <%=product.quantity%>
              <button type="button" class="btn btn-dark custom-btn mx-2">-</button>
              </td>
              <td class="py-4">
              <button type="button" class="btn btn-dark custom-btn mx-2">x</button>
              </td>
              <td class="py-4"><%=prod.Price%></td>
              <%})%>
            </tr>
          </tbody>
          <%})%>
        </table>
      </div>
    </div>
  </div>
</section>
